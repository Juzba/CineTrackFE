<Window
    x:Class="CineTrackFE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CineTrackFE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:CineTrackFE.ViewModels"
    Title="MainWindow"
    Width="1280"
    Height="720"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    FontSize="30"
    Foreground="White"
    mc:Ignorable="d">
    <Grid Background="#3D5B81">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="77*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="35"
            FontStyle="Oblique"
            FontWeight="Bold"
            Foreground="#293241"
            Text="Cine Track" />

        <TextBlock
            Grid.ColumnSpan="2"
            Padding="30,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"
            FontStyle="Oblique"
            FontWeight="Bold"
            Foreground="#293241"
            Text="{Binding Title}" />

        <StackPanel Grid.Row="1">
            <Button
                Height="40"
                Margin="20,0,20,10"
                Background="#293241"
                BorderBrush="#DFFBFC"
                Command="{Binding NavDashboardCommand}"
                Content="Dashboard"
                FontSize="20"
                Foreground="#EE6B4D" />

            <Button
                Height="40"
                Margin="20,10"
                Background="#293241"
                BorderBrush="#DFFBFC"
                Command="{Binding NavCatalogCommand}"
                Content="Catalog"
                FontSize="20"
                Foreground="#EE6B4D" />

        </StackPanel>

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <TextBlock
                Margin="10,0"
                VerticalAlignment="Center"
                Text="{Binding UserName}"
                FontSize="20"
                Foreground="#DFFBFC" />


            <Button
                Margin="10,0"
                Background="#293241"
                BorderBrush="#DFFBFC"
                Command="{Binding NavLoginCommand}"
                Content="Login"
                Foreground="#EE6B4D" />
            <Button
                Margin="10,0"
                Background="#293241"
                BorderBrush="#DFFBFC"
                Command="{Binding NavRegisterCommand}"
                Content="Register"
                Foreground="#EE6B4D" />
        </StackPanel>


        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            prism:RegionManager.RegionName="MainRegion" />
    </Grid>
</Window>
