<Window
    x:Class="CineTrackFE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CineTrackFE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/" xmlns:viewmodels="clr-namespace:CineTrackFE.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Title="MainWindow"
    Width="1280"
    Height="720"
    FontSize="30"
    Foreground="White"
    mc:Ignorable="d">
    <Grid Background="#161616">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Cine Track" />

        <StackPanel Grid.Row="1">
            <Button
                Command="{Binding DelegateCommand}"
                Height="40"
                Margin="20,10"
                Content="Button 1"
                FontSize="20" />
            <Button
                Height="40"
                Margin="20,10"
                Content="Button 2"
                FontSize="20" />

        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Grid.Column="1" Orientation="Horizontal">
            <Button Margin="10 0" Content="Login"></Button>
            <Button Margin="10 0" Content="Register"></Button>
        </StackPanel>
        

        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            prism:RegionManager.RegionName="MainRegion" />
    </Grid>
</Window>
