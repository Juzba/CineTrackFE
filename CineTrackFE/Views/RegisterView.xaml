<UserControl x:Class="CineTrackFE.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CineTrackFE.Views"
             mc:Ignorable="d" 
             FontSize="30"
             d:DesignHeight="720" d:DesignWidth="1280">

    <Grid Background="#20448C">

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="90" />
            <RowDefinition MinHeight="40" />
            <RowDefinition Height="330" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
         Grid.Row="1"
         Grid.ColumnSpan="3"
         HorizontalAlignment="Center"
         FontSize="20"
         Foreground="red"
         Text="{Binding ErrorMessage}" />

        <StackPanel
         Grid.Row="2"
         Grid.Column="1"
         HorizontalAlignment="Center"
         VerticalAlignment="Top">
            <TextBox
             Width="350"
             Margin="10"
             Text="{Binding Email, Mode=TwoWay}" />

            <TextBox
             Width="350"
             Margin="10"
             Text="{Binding PasswordA, Mode=TwoWay}" />


            <TextBox
             Width="350"
             Margin="10"
             Text="{Binding PasswordB, Mode=TwoWay}" />

            <Button
             Width="200"
             Height="50"
             Margin="20"
             HorizontalAlignment="Center"
             Background="#FFBC24"
             Command="{Binding RegisterCommand}"
             Content="Registrovat"
             FontSize="30"
             Foreground="#20448C" />



        </StackPanel>
    </Grid>




</UserControl>
