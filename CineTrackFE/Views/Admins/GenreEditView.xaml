<UserControl
    x:Class="CineTrackFE.Views.Admins.GenreEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:admins="clr-namespace:CineTrackFE.ViewModels.Admins"
    xmlns:converters="clr-namespace:CineTrackFE.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CineTrackFE.Views.Admins"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=admins:GenreEditViewModel}"
    d:DesignHeight="505"
    d:DesignWidth="975"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="16"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:VisibilityInverterConvertor x:Key="VisibilityInverterConvert" />
    </UserControl.Resources>

    <Grid Background="#3D5B81">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <TextBlock
            Width="auto"
            Padding="10"
            FontSize="16"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            TextWrapping="Wrap" />
        <Button
            Grid.Column="1"
            Height="auto"
            Margin="0,20"
            Padding="10,5"
            HorizontalAlignment="Right"
            Background="#293241"
            BorderBrush="Transparent"
            Command="{Binding OpenNewFormCommand}"
            Content="Přidat nový žánr"
            FontSize="20"
            Foreground="#DFFBFC" />




        <DataGrid
            Grid.Row="1"
            Margin="0,0,0,55"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="#3D5B81"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="17"
            Foreground="#FFD340"
            IsReadOnly="True"
            ItemsSource="{Binding GenreList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedGenre}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    MinWidth="70"
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="180"
                    MinWidth="150"
                    Binding="{Binding Name}"
                    Header="Název" />
            </DataGrid.Columns>
        </DataGrid>

        <Popup
            Name="MyPopup"
            Width="600"
            Height="auto"
            HorizontalAlignment="Stretch"
            AllowsTransparency="True"
            IsOpen="{Binding IsPopupOpen, Mode=TwoWay}"
            Placement="Center"
            PlacementTarget="{Binding ElementName=ShowPopupButton}">
            <Border
                Padding="20"
                Background="#DFFBFC"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>


                    <TextBlock
                        Grid.ColumnSpan="2"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#293241"
                        Text="Formulář Žánru"
                        TextAlignment="Left" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10"
                        FontSize="16"
                        Foreground="red"
                        Text="{Binding FormErrorMessage}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="2"
                        Margin="0,0,30,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontWeight="Bold"
                        Foreground="#293241"
                        Text="Název:" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        Padding="10,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Top"
                        Background="#9BC0D9"
                        Foreground="#293241"
                        MaxLength="20"
                        Text="{Binding SelectedGenre.Name}"
                        TextWrapping="Wrap" />

                    <Button
                        Grid.Column="1"
                        Height="auto"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#9BC0D9"
                        Command="{Binding ClosePopUpCommand}"
                        Content="X"
                        FontSize="20"
                        Foreground="Black" />

                    <StackPanel
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button
                            Margin="10"
                            Background="#293241"
                            Command="{Binding AddGenreCommand}"
                            Content="Přidat"
                            Foreground="#EE6B4D"
                            Visibility="{Binding EditVisibility, Converter={StaticResource VisibilityInverterConvert}}" />

                        <Button
                            Margin="10"
                            Background="#293241"
                            Command="{Binding EditGenreCommand}"
                            Content="Editovat"
                            Foreground="#EE6B4D"
                            Visibility="{Binding EditVisibility}" />

                        <Button
                            Margin="10"
                            Background="#EE6B4D"
                            Command="{Binding RemoveGenreCommand}"
                            Content="Smazat"
                            Foreground="#293241"
                            Visibility="{Binding EditVisibility}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>






        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>


        </Grid>
    </Grid>


</UserControl>
