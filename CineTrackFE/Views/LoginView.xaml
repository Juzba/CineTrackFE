<UserControl
    x:Class="CineTrackFE.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CineTrackFE.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    FontSize="30"
    mc:Ignorable="d">


    <Grid Background="#20448C">

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="100" />
            <RowDefinition MinHeight="40" />
            <RowDefinition Height="300" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="2"
            Width="150"
            Height="40"
            Panel.ZIndex="10"
            Command="{Binding InstaAccessCommand}"
            Content="Instant Access" />



        <TextBlock
            Grid.Row="1"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            FontSize="20"
            Foreground="red"
            Text="{Binding ErrorMessage}" />

        <Grid Grid.Row="2" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <TextBlock
                Margin="20 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Jméno:" />


            <TextBox
                VerticalAlignment="Center"
                Grid.Column="1"
                Margin="10"
                Text="{Binding Email, Mode=TwoWay}" />

            <TextBlock
                Margin="20 0"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Heslo:" />

            <PasswordBox
                Grid.Row="1"
                VerticalAlignment="Center"
                Grid.Column="1"
                Margin="10"
                PasswordChar="{Binding Password, Mode=TwoWay}" />

            <Button
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Width="200"
                Height="50"
                Margin="20"
                HorizontalAlignment="Center"
                Background="#FFBC24"
                Command="{Binding LoginCommand}"
                Content="Přihlásit"
                FontSize="30"
                Foreground="#20448C" />

        </Grid>
    
    </Grid>






</UserControl>
